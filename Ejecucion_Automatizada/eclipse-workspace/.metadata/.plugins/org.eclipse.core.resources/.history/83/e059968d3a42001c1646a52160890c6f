package demoTestim;

import org.openqa.selenium.WebDriver;
import util.FunctionGeneric;

public class flujoSitio {

	WebDriver driver;

	public void siteTestim(WebDriver driver) {
		this.driver = driver;
	}

	public static String SeleccionarDestino () {

		String msg = "OK";

		try {
			
			msg = FunctionGeneric.clickObjectByXpath("Click en Menú", "//*[@id=\'testId-HamburgerBtn-toggle\']", "click", FunctionGeneric.driver);
			Thread.sleep(1000);
			if (!msg.equals("OK"))
				return msg;
			
			msg = FunctionGeneric.clickObjectByXpath("Click en Menú Liquidación", "//*[@id=\'scrollable-content\']/div/div[2]/div/ul/li[1]/div/p", "click", FunctionGeneric.driver);
			Thread.sleep(1000);
			if (!msg.equals("OK"))
				return msg;
			
			msg = FunctionGeneric.clickObjectByXpath("Click en Sub-Menú Liquidación Hombre", "a", "href", "https://www.falabella.com/falabella-cl/collection/liquidacion-moda-hombre", "click", FunctionGeneric.driver);
			Thread.sleep(1000);
			if (!msg.equals("OK"))
				return msg;
	

		} catch (Exception e) {
			msg = "Error al clickear categoría";
		}

		return msg;
	}
	
	public static String filtrarBusqueda () {

		String msg = "OK";

		try {
			
			msg = FunctionGeneric.clickObjectByXpath("Filtrar por marca", "//*[@id=\'testId--desktop-container\']/div/ul/li[5]/div/ul/li[1]/label/span", "click", FunctionGeneric.driver);
			Thread.sleep(1000);
			if (!msg.equals("OK"))
				return msg;

		} catch (Exception e) {
			msg = "Error al filtrar por marca";
		}

		return msg;
	}

	public static String seleccionarProducto (String producto) {

		String msg = "OK";

		try {
			
			msg = FunctionGeneric.clickObjectByXpath("Click en producto", "a", "href", producto, "click", FunctionGeneric.driver);
			Thread.sleep(1000);
			if (!msg.equals("OK"))
				return msg;

		} catch (Exception e) {
			msg = "Error al seleccionar producto";
		}

		return msg;
	}
	
	public static String seleccionarTalla () {

		String msg = "OK";

		try {
			
			msg = FunctionGeneric.clickObjectByXpath("Seleccionar talla", "button", "id", "testId-sizeButton-S", "click", FunctionGeneric.driver);
			Thread.sleep(1000);
			if (!msg.equals("OK"))
				return msg;

		} catch (Exception e) {
			msg = "Error al seleccionar talla";
		}

		return msg;
	}
	
	public static String agregarAlCarro () {

		String msg = "OK";

		try {
			
			msg = FunctionGeneric.clickObjectByXpath("Agregar al carro", "//*[@id=\'buttonForCustomers\']/button", "click", FunctionGeneric.driver);
			Thread.sleep(1000);
			if (!msg.equals("OK"))
				return msg;
			
			msg = FunctionGeneric.clickObjectByXpath("Botón cerrar modal", "//*[@id=\'__next\']/div/div/div/div/div/div/div[1]/button", "click", FunctionGeneric.driver);
			Thread.sleep(1000);
			if (!msg.equals("OK"))
				return msg;
			
		} catch (Exception e) {
			msg = "Error al agregar al carro";
		}

		return msg;
	}
	
	public static String verCarro () {

		String msg = "OK";

		try {
			
			msg = FunctionGeneric.clickObjectByXpath("Ver carro de compras", "//*[@id=\'testId-UserAction-basket\']/i", "click", FunctionGeneric.driver);
			Thread.sleep(1000);
			if (!msg.equals("OK"))
				return msg;
			
		} catch (Exception e) {
			msg = "Error al hacer click en carro";
		}

		return msg;
	}
}